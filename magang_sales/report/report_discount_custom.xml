<openerp>
    <data>
        <template id="sale_order_custom1" inherit_id="magang_report.report_saleorder_document_inherit">
            <xpath expr="//table[@class='table table-condensed']/tr[1]" position="after">
                        <tr>
                            <td><strong>Price Discount</strong></td>
                            <td class="text-right">
                                <span t-field="doc.price_discount"
                                    t-options='{"widget": "monetary", "display_currency": doc.pricelist_id.currency_id}'/>
                            </td>
                        </tr>
             </xpath>
        </template>
        <template id="sale_order_custom2" inherit_id="magang_report.report_saleorder_document_inherit">
            <xpath expr="//table[@class='table table-condensed']/tr[3]" position="replace">
                <tr class="border-black">
                            <td><strong>Total</strong></td>
                            <td class="text-right">
                                <span t-field="doc.total_discount"
                                    t-options='{"widget": "monetary", "display_currency": doc.pricelist_id.currency_id}'/>
                            </td>
                </tr>
            </xpath>
        </template>
		<template id="sale_order_custom3" inherit_id="magang_report.report_saleorder_document_inherit">
            <xpath expr="//table[@class='table table-condensed']/thead/tr/th[7]" position="after">
               <th class="text-right">Discount</th>
            </xpath>
       		<xpath expr="//tbody[@class='sale_tbody']/t/t[2]/tr/td[7]" position="after">
                 <td class="text-right">
                     <span t-field="l.discount_m2o"/>
                 </td>
            </xpath>
        </template>
    </data>
</openerp>