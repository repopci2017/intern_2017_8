<odoo>
	<data>
		<record id="view_form_discount_discount" model="ir.ui.view">
			<field name="name">discount.discount.form</field>
			<field name="model">discount.discount</field>
			<field name="arch" type="xml">
				<form string="discount">
					<group>
						<field	name="name"/>	
						<field	name="percentage"/>	
						<field	name="status"/>
					</group>
				</form>
			</field>
		</record>
		<record id="view_tree_discount_discount" model="ir.ui.view">
			<field name="name">discount.discount.tree</field>
			<field name="model">discount.discount</field>
			<field name="arch" type="xml">
				<tree string="discount">
						<field	name="name"/>	
						<field	name="percentage"/>	
						<field	name="status"/>
				</tree>
			</field>
		</record>
		<record model='ir.actions.act_window' id='discounts_action'>
            <field name="name">Discount</field>
            <field name="res_model">discount.discount</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[]</field>
            <field name="context">{}</field>
            <field name="view_id" ref="view_tree_discount_discount"/>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Discounts
                </p>    
            </field>
        </record>
		<!--	Action	to	open	To-do	Task	list	-->	
		<act_window	id="action_discount_discount"	
				name="Discount"	
				res_model="discount.discount"	
				view_mode="tree,form"	/>	
		<!--	Menu	item	to	open	To-do	Task	list	-->	
		<menuitem	id="menu_discount_discount" sequence="1"	
				name="Discount"	
				action="action_discount_discount" parent="sales_team.menu_sales"/>

		<record id="view_order_form_inherit" model="ir.ui.view">
			<field name="name">sale.order.form.inherit</field>
			<field name="model">sale.order</field>
			<field name="inherit_id" ref="sale.view_order_form"/>
				<field name="arch" type="xml">
					<field name="payment_term_id" position="after">
						<field name="is_available" groups="sales_team.group_sale_manager"/>						
					</field>				
				</field>	
		</record>		
		</data>
</odoo>
