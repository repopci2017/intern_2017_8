<openerp>
    <data>
        <template id="purchase_order_custom" inherit_id="purchase.report_purchaseorder_document">
            <xpath expr="//div[@class='col-xs-4 pull-right']/table/tr[2]" position="after">
                 <tr>
                        <td><b>Down Payment</b></td>
                            <td class="text-right">
                                <span t-field="o.down_payment"
                                    t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                            </td>
                        </tr>
            </xpath>
        </template>
        <template id="purchase_order_custom2" inherit_id="purchase.report_purchaseorder_document">
            <xpath expr="//div[@class='col-xs-4 pull-right']/table/tr[4]" position="replace">
                 <tr class="border-black">
                        <td><b>Total</b></td>
                            <td class="text-right">
                                <span t-field="o.total_payment"
                                    t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                            </td>
                        </tr>
            </xpath>
        </template>
    </data>
</openerp>